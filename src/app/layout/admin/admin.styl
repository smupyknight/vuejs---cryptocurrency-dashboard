@import './../../../assets/stylus/_settings'

.container {
    display: flex;
    flex-wrap: wrap;
    color: #001e38;
    font-family: 'Helvetica Neue';
    font-size: 14px;
}

.container__content {
    width: 100%;
}

.header {
    height: 110px;
    width: 100%;
    display: flex;
    align-items: center;
    box-sizing: border-box;
}

.header__logo--wrapper {
    max-width: 305px;
    width: 100%;
    padding-left: 30px;
    padding-right: 30px;
    box-sizing: border-box;
}

.header__logo {
    width: 100%;
    max-width: 200px;
    height: 55px;
}

.header__search {
    height: 100%;
    width: 100%;
    max-width: 1070px;
    display: flex;
    align-items: center;
    position: relative;
    padding-left: 30px;
    background: linear-gradient(to right, #7cbaff14 1%,#feffff 100%) no-repeat;
    background-size: 30px 100%;
}

.header__search--wrapper {
    width: 100%;
    position: relative;
}

.header__search__input {
    width: 100%;
    max-width: 615px;
    font-size: 18px;
    font-family: 'Helvetica Neue';
    font-style: italic;
    color: #001e38;
    padding: 0 10px 12px 35px;
    border: none;
    border-bottom: 1px solid #e0e0e0;
    box-sizing: border-box;
    box-shadow: none;
    outline: none;
}

.header__search__input::placeholder {
    color: rgba(0,30,56, .3);
    font-size: 18px;
}

.header__search__input + label {
    width: 20px;
    height: 20px;
    display: block;
    background: url(image_path'search.png') no-repeat;
    position: absolute;
    bottom: 12px;
}

.header__profile {
    height: 100%;
    width: 100%;
    max-width: 250px;
    display: flex;
    align-items: center;
    justify-content: center;
    padding-left: 12px;
    padding-right: 12px;
    border-right: 1px solid #e7f1f7;
}

.header__profile span {
    width: 60px;
    height: 60px;
    position: relative;
    margin-left: 7px;
    margin-right: 7px;
    border-radius: 50%;
    cursor: pointer;
    background: rgba(206, 191, 248, 0.15);
}

.header__profile span:hover {
    box-shadow: 0 0 24px 3px rgba(29,114,210, .15);
}

.header__profile__notifications__count,
.pageList__subPages__page__notifications {
    width: 25px;
    height: 25px;
    display: flex;
    justify-content: center;
    align-items: center;
    font-size: 14px;
    position: absolute;
    top: 0px;
    right: -10px;
    color: #ffffff;
    background: #06c96a;
    box-shadow: 0px 2px 13px 4px rgba(6,201,106, .3);
    border-radius: 50%;
}

.header__profileMenu {
    width: 100%;
    max-width: 290px;
    display: flex;
    align-items: center;
    justify-content: space-evenly;
}

.header__profileMenu img {
    width: 59px;
    height: 59px;
    border-radius: 50%;
    border: 2px solid #e7f1f6;
    padding: 3px;
}

.header__profileMenu__arrow {
    background: url(image_path'listArrow.png') no-repeat;
    width: 12px;
    height: 10px;
    cursor: pointer;
}


/****************NAV PANEL********************/


.container__nav {
    width: 100%;
    max-width: 305px;
    padding-top: 30px;
}

.container__nav__logOut {
    height: 80px;
    width: 100%;
    display: flex;
    align-items: center;
    padding-left: 30px;
    background: rgba(231,241,247, .5);
    color: rgba(0,30,56, .8);
    cursor: pointer;
    box-sizing: border-box;
}

.container__nav__logOut img {
    margin-right: 15px;
}

.pageList {
    width: 100%;
    list-style: none;
    padding: 0;
    margin-bottom: 140px;
}

.pageList__page {
    width: 100%;
    display: flex;
    flex-wrap: wrap;
    align-items: center;
    cursor: pointer;
    color: rgba(0,30,56, .8);
    box-sizing: border-box;
}

.pageList__page.list > div:after {
    content: '';
    height: 8px;
    width: 14px;
    background: url(image_path'listArrow.png') no-repeat;
    transform: rotate(180deg) translateY(4px);
    position: absolute;
    right: 0;
    top: 50%;
}

.pageList__page.list > div.opened:after {
    transform: none;
}

.pageList__page.list > div {
    position: relative;
}

.pageList__page > div {
    width: 100%;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #e7f1f7;
    padding-top: 30px;
    padding-bottom: 30px;
    margin-left: 30px;
    margin-right: 30px;
}

.pageList__page:last-of-type > div {
    border-bottom: none;
}

.pageList__page__icon {
    width: 19px;
    max-height: 21px;
    display: block;
    margin-right: 15px;
}

.pageList__subPages {
    width: 100%;
    display: none;
    list-style: none;
    padding: 0;
    margin-top: -1px;
    background-color: rgb(255, 255, 255);
    box-shadow: inset -4.38px 27.655px 79px 0px rgba(29, 114, 210, 0.15);
}

.pageList__subPages__page {
    display: flex;
    align-items: center;
    padding: 30px 0;
    margin-left: 30px;
    margin-right: 30px;
    position: relative;
}

.pageList__subPages__page:nth-of-type(2) {
    border-top: 1px solid #e7f1f7;
}

.pageList__subPages__page img {
    margin-left: 35px;
}

.pageList__subPages__page__notifications {
    top: 50%;
    transform: translateY(-50%);
}